{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/bbux-dev/dataspec/schemas/range.schema.json",
  "type": "object",
  "required": ["data"],
  "properties": {
    "type": {  "type": "string", "pattern": "range"},
    "config": {
      "type": "object",
      "properties": {
        "prefix": {"$ref": "#/definitions/prefix"},
        "suffix": {"$ref": "#/definitions/suffix"},
        "quote": {"$ref": "#/definitions/quote"},
        "count": {"$ref": "#/definitions/count"}
      }
    },
    "data": {
      "oneOf": [
        {
          "type": "array",
          "minItems": 1,
          "maxItems": 3,
          "uniqueItems": false,
          "items": { "type": "number" }
        },
        {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "array",
            "minItems": 1,
            "maxItems": 3,
            "uniqueItems": false,
            "items": { "type": "number" }
          }
        }
      ]
    }
  }
}