{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/bbux-dev/dataspec/schemas/date.schema.json",
  "type": "object",
  "required": ["type"],
  "properties": {
    "type": {  "type": "string", "pattern": "^date(\\.iso|\\.iso\\.us)?$"},
    "config": {
      "type": "object",
      "properties": {
        "prefix": {"$ref": "#/definitions/prefix"},
        "suffix": {"$ref": "#/definitions/suffix"},
        "quote": {"$ref": "#/definitions/quote"},
        "count": {"$ref": "#/definitions/count"},
        "format": {
          "description": "Valid datetime format string",
          "examples": [
            "%Y%m%d",
            "%m/%d/%Y",
            "%H:%M:%S"
          ],
          "type": "string"
        },
        "delta_days": {
          "description": "The number of days (or range of days) +- from the base/anchor date to create date strings for",
          "examples": [
            1, 12, [14, 0], [0, 30]
          ],
          "oneOf": [
            {"type": "integer"},
            {
              "type": "array",
              "minItems": 2,
              "maxItems": 2,
              "items": { "type": "integer" }
            }
          ]
        },
        "anchor": {
          "type": "string",
          "description": "date string matching format or default format to use for base date",
          "examples": [
            "22-02-2022", "02/22/1972", "2009-09-01T08:08.000Z"
          ]
        },
        "offset": {
          "type": "integer",
          "description": "number of days to shift base date by, positive means shift backwards, negative means forward",
          "examples": [
            30, -30, 365, 730
          ]
        }
      }
    },
    "additionalProperties": false
  }
}